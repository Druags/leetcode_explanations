class Solution:
    def singleNumber(self, nums: List[int]) -> int:
        nums.sort() # сортирую список, чтобы все одинаковые элементы следовали друг за другом
        for i in range(0, len(nums), 3): # перебираю список, переходя через 3 элемента, поскольку список состоит из троиц одинаковых чисел и одного искомого
            if i != len(nums)-1 and nums[i] == nums[i+1] == nums[i+2]: # если элемент не последний и равен с двумя следующими числами, то запускаю следующую итерацию
                continue
            else: # иначе возвращаю этот элемент, поскольку он либо отличается от следующих двух значений, либо является последним и цикл пройден полностью, что значит, что искомый элемент - последний
                return nums[i]
