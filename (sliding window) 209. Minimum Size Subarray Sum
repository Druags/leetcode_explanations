from sys import maxsize 

class Solution:
    def minSubArrayLen(self, target: int, nums: List[int]) -> int:
        res = maxsize
        left, total = 0, 0  # объявляем левую границу окна left и total, в котором будет храниться временная сумма
        
        for i in range(len(nums)):  # запускаем цикл по всем элементам списка
            total += nums[i]  # добавляем во временную сумму нынешний элемент
            while total >= target:  # запускаем цикл в случае, если временная сумма больше искомой суммы
                res = min(res, i - left + 1)  # выбираем милинмальное значение между нынешним результатом и новым, длину подсписка получаем через i - left + 1
                total -= nums[left]  # из суммы вычитаем элемент, находящийся по индекус левой границы
                left += 1  # увеличиваем левую границу на единицу
        
        return res if res != maxsize else 0  # если результат изменился с начала программы, возвращаем его, если нет, то возвращаем 0
